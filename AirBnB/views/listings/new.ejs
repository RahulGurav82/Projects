<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h2>New Listings</h2>
    <form method="post" action="/listings/new">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" type="text" placeholder="Enter A Title" class="form-control">
        </div>

        <br />
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea name="listing[description]" class="form-control"></textarea>
        </div>
        <br />
        <div class="mb-3">
            <label for="image" class="form-label">image</label>
            <input name="listing[image]" type="text" placeholder="Enter URl And Link" class="form-control">
        </div>
        <br />

        <div class="row">

            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">price</label>
                <input name="listing[price]" type="number" placeholder="Price" class="form-control">
            </div>
            <br />

            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">location</label>
                <input name="listing[location]" type="text" placeholder="Enter Location" class="form-control">
            </div>
            <br />

        </div>

        <div class="mb-3">
            <label for="country" class="form-label">country</label>
            <input name="listing[country]" type="text" placeholder="Enter Country">
        </div>
        <br />
        <button class="btn btn-dark">Add</button>
    </form>
</div>
</div>
</body>
<% layout("/layouts/boilerplate") %>
<body>
    <div class="row"> <!-- Fixing 'roe' typo to 'row' -->
        <div class="col-8 offset-2">
            <br />
            <h2>Edit This Listing</h2>
            <form method="POST" action="/listings/<%= listings._id %>/edit?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="text" value="<%= listings.title %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Please Enter A Title.
                    </div>
                    <div class="valid-feedback">
                        Title Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%= listings.description %></textarea>
                    <div class="invalid-feedback">
                        Please Enter A Description.
                    </div>
                    <div class="valid-feedback">
                        Valid Description
                    </div>
                </div>
                <div class="mb-3">
                    Origanl Image <br>
                    <img src="<%= orignalImageUrl %>" alt="">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input name="listing[image]" type="file" class="form-control">
                    <div class="invalid-feedback">
                        Please Enter An Image URL.
                    </div>
                    <div class="valid-feedback">
                        Valid Image URL
                    </div>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" type="number" value="<%= listings.price %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Please Enter A Price.
                    </div>
                    <div class="valid-feedback">
                        Valid Price.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" type="text" value="<%= listings.location %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Please Enter A Location.
                    </div>
                    <div class="valid-feedback">
                        Valid Location.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" type="text" value="<%= listings.country %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Please Enter A Country.
                    </div>
                    <div class="valid-feedback">
                        Valid Country.
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <br /><br />
        </div>
    </div>

    <!-- External Script -->
    <script src="/js/script.js"></script>
</body>

<% layout("/layouts/boilerplate") %>
<body>
    <div class="roe">
        <div class="col-8 offset-2">
    <br />
    <h2>Edit This Listing</h2>
    <form method="post" action="/listings/<%= listings._id %>/edit?_method=PUT" class="needs-validation" novalidate>

        <div class="mb-3">
            <label for="title" class="form-label">title</label>
            <input name="listing[title]" type="text" value="<%= listings.title %>" class="form-control" required>  
            <div class="invalid-feedback">
                Please Enter A Title.
            </div>
            
            <div class="valid-feedback">
                Title Looks good!
            </div>
        </div>
        <br />
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea name="listing[description]" class="form-control" required><%= listings.description %></textarea>
            <div class="invalid-feedback">
                Please Enter A description.
            </div>
            <div class="valid-feedback">
                Valid description
            </div>
        </div>
        <br />
        <div class="mb-3">
            <label for="image" class="form-label">image</label>
            <input name="listing[image.url]" type="text" value="<%= listings.image.url %>" class="form-control" required>

        </div>
        <br />
        <div class="mb-3">
            <label for="price" class="form-label">price</label>
            <input name="listing[price]"  value="<%= listings.price %>" class="form-control" required>
            <div class="invalid-feedback">
                Please Enter A Price.
            </div>
            <div class="valid-feedback">
                Valid Price
            </div>
        </div>
        <br />
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input name="listing[location]" type="text" value="<%= listings.location %>" class="form-control" required>
        </div>
        <br />
        <div class="mb-3">
            <label for="country" class="form-label">country</label>
            <input name="listing[country]" type="text" value="<%= listings.country %>" class="form-control" required>
        </div>
        <br />
        <button>Add</button>
        <br />
        <br />
    </form>
</div>
</div>
<script src="/js/script.js"></script>
</body>

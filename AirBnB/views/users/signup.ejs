<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>SingUp Form</h1>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input name="username" type="text" placeholder="Enter A username" id="username" class="form-control" required>
                <div class="invalid-feedback">
                    Please Enter A username.
                </div>
                <div class="valid-feedback">
                    username looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">email</label>
                <input name="email" type="text" placeholder="Enter A email" id="email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input name="password" type="text" placeholder="Enter A password" id="password" class="form-control" required>
            </div>

            <button class="btn btn-gr" type="submit">Submit</button>
        </form>
    </div>
</div>   